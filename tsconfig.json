{
	"compilerOptions": {
		"target": "ES2017",
		"useDefineForClassFields": true,
		"lib": ["ES2017", "DOM", "DOM.Iterable"],
		"skipLibCheck": true,
		"experimentalDecorators": true,

		/* Bundler mode */
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"resolveJsonModule": true,
		"module": "Preserve",
		"allowJs": true,
		"noEmit": true,

		/* Linting */
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true
	},
	"include": [
		"src"
	],
	"exclude": [
		"src/monaco-editor/lib",
		"src/code/lib"
	],
	"references": [
		{"path": "./src/monaco-editor/lib/tsconfig.json"},
		{"path": "./src/code/lib/tsconfig.json"}
	]
}
